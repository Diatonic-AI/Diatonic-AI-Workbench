{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "DynamoDB table for diatonic-ai-user-profiles",
    "Parameters": {
        "env": {
            "Type": "String"
        },
        "tableName": {
            "Type": "String"
        },
        "partitionKey": {
            "Type": "String"
        },
        "partitionKeyType": {
            "Type": "String"
        }
    },
    "Conditions": {
        "ShouldNotCreateEnvResources": {
            "Fn::Equals": [
                {
                    "Ref": "env"
                },
                "NONE"
            ]
        }
    },
    "Resources": {
        "DynamoDBTable": {
            "Type": "AWS::DynamoDB::Table",
            "Properties": {
                "TableName": {
                    "Fn::If": [
                        "ShouldNotCreateEnvResources",
                        {
                            "Ref": "tableName"
                        },
                        {
                            "Fn::Join": [
                                "",
                                [
                                    {
                                        "Ref": "tableName"
                                    },
                                    "-",
                                    {
                                        "Ref": "env"
                                    }
                                ]
                            ]
                        }
                    ]
                },
                "KeySchema": [
                    {
                        "AttributeName": {
                            "Ref": "partitionKey"
                        },
                        "KeyType": "HASH"
                    }
                ],
                "AttributeDefinitions": [
                    {
                        "AttributeName": {
                            "Ref": "partitionKey"
                        },
                        "AttributeType": {
                            "Ref": "partitionKeyType"
                        }
                    }
                ],
                "BillingMode": "PAY_PER_REQUEST",
                "PointInTimeRecoverySpecification": {
                    "PointInTimeRecoveryEnabled": false
                }
            }
        }
    },
    "Outputs": {
        "Name": {
            "Value": {
                "Ref": "DynamoDBTable"
            },
            "Description": "Name of the DynamoDB table"
        },
        "Arn": {
            "Value": {
                "Fn::GetAtt": [
                    "DynamoDBTable",
                    "Arn"
                ]
            },
            "Description": "Arn of the DynamoDB table"
        },
        "Region": {
            "Value": {
                "Ref": "AWS::Region"
            }
        }
    }
}
