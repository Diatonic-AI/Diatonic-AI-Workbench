# DynamoDB Migration API Server Environment Configuration

# =============================================================================
# Server Configuration
# =============================================================================
NODE_ENV=development
MIGRATION_API_PORT=3001

# =============================================================================
# JWT Authentication
# =============================================================================
JWT_SECRET=your-super-secure-jwt-secret-change-this-in-production
JWT_EXPIRATION=24h

# =============================================================================
# AWS Configuration
# =============================================================================
AWS_REGION=us-east-2
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# Optional: For local DynamoDB development
# AWS_ENDPOINT_URL=http://localhost:8002

# =============================================================================
# MCP Integration
# =============================================================================
ENABLE_MCP_INTEGRATION=true
MCP_HUB_ENDPOINT=http://localhost:3000/mcp

# =============================================================================
# Migration Settings
# =============================================================================
MAX_CONCURRENT_MIGRATIONS=3
MIGRATION_TIMEOUT=1800000

# =============================================================================
# Security & CORS
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=info
LOG_FILE=logs/migration-api.log

# =============================================================================
# Database Configuration
# =============================================================================
# Table prefixes for different environments
TABLE_PREFIX_DEVELOPMENT=ai-nexus-workbench-development
TABLE_PREFIX_STAGING=ai-nexus-workbench-staging
TABLE_PREFIX_PRODUCTION=ai-nexus-workbench-prod

# =============================================================================
# Production Security Settings
# =============================================================================
# HTTPS_CERT_PATH=/path/to/cert.pem
# HTTPS_KEY_PATH=/path/to/private-key.pem
# TRUST_PROXY=true

# =============================================================================
# Monitoring & Health Checks
# =============================================================================
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true

# =============================================================================
# Development Settings
# =============================================================================
DEBUG_MODE=false
VERBOSE_LOGGING=false

# =============================================================================
# Backup Configuration
# =============================================================================
BACKUP_BUCKET=ai-nexus-workbench-backups
BACKUP_RETENTION_DAYS=30

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_ATTEMPTS=5

# =============================================================================
# Features Flags
# =============================================================================
ENABLE_AUDIT_LOGGING=true
ENABLE_PERFORMANCE_METRICS=true
ENABLE_MIGRATION_ROLLBACK=true
ENABLE_DRY_RUN=true

# =============================================================================
# Integration Settings
# =============================================================================
# Notification webhook URL for migration status updates
# WEBHOOK_URL=https://your-webhook-endpoint.com/migrations

# =============================================================================
# Example Production Values (commented out)
# =============================================================================
# NODE_ENV=production
# MIGRATION_API_PORT=443
# JWT_SECRET=super-secure-production-secret-with-high-entropy
# AWS_REGION=us-east-1
# ENABLE_MCP_INTEGRATION=false
# MAX_CONCURRENT_MIGRATIONS=1
# CORS_ORIGINS=https://your-domain.com
# LOG_LEVEL=warn
# DEBUG_MODE=false
