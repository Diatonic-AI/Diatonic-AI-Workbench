{
  "name": "dynamodb-migration-api",
  "version": "1.0.0",
  "description": "Production-grade DynamoDB Migration API Server with JWT auth and MCP integration",
  "main": "migration-api-server.js",
  "scripts": {
    "start": "node migration-api-server.js",
    "dev": "nodemon migration-api-server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint *.js --fix",
    "docker:build": "docker build -t dynamodb-migration-api .",
    "docker:run": "docker run -p 3001:3001 --env-file .env dynamodb-migration-api",
    "setup": "mkdir -p logs && npm install",
    "health": "curl -f http://localhost:3001/health || exit 1"
  },
  "keywords": [
    "dynamodb",
    "migration",
    "api",
    "jwt",
    "mcp",
    "aws",
    "database",
    "devops",
    "production"
  ],
  "author": "AI Nexus Workbench",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.478.0",
    "@aws-sdk/lib-dynamodb": "^3.478.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "winston": "^3.11.0",
    "uuid": "^9.0.1",
    "joi": "^17.11.0",
    "dotenv": "^16.3.1",
    "compression": "^1.7.4",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "axios": "^1.6.2",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.54.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcrypt": "^5.0.2",
    "@types/uuid": "^9.0.7",
    "docker": "^1.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "*.js",
      "!node_modules/**",
      "!coverage/**"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  },
  "eslintConfig": {
    "extends": "standard",
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "semi": ["error", "always"],
      "quotes": ["error", "single"],
      "indent": ["error", 4],
      "no-console": "warn",
      "no-unused-vars": "error"
    }
  }
}
