# Diatonic AI Workbench - Environment Variables Configuration
# Copy this file to .env.local and fill in your actual values

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================

# Application Metadata
VITE_APP_NAME="Diatonic AI Workbench"
VITE_APP_VERSION="1.0.0"
VITE_APP_DOMAIN="localhost:8080"

# Environment Configuration
VITE_NODE_ENV="development"
NODE_ENV="development"

# ==============================================
# AWS CONFIGURATION
# ==============================================

# AWS Region
VITE_AWS_REGION="us-east-2"
AWS_REGION="us-east-2"

# AWS Cognito Configuration
VITE_AWS_COGNITO_USER_POOL_ID="us-east-2_XXXXXXXXX"
VITE_AWS_COGNITO_USER_POOL_CLIENT_ID="xxxxxxxxxxxxxxxxxxxxxxxxxx"
VITE_AWS_COGNITO_IDENTITY_POOL_ID="us-east-2:xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"

# AWS API Gateway
VITE_AWS_API_GATEWAY_ENDPOINT="https://xxxxxxxxxx.execute-api.us-east-2.amazonaws.com/prod"

# AWS S3 Configuration
VITE_AWS_S3_BUCKET="diatonic-ai-static-assets-development"

# AWS DynamoDB Configuration
VITE_AWS_DYNAMODB_USERS_TABLE="diatonic-ai-users-development"
VITE_AWS_DYNAMODB_PROJECTS_TABLE="diatonic-ai-projects-development"
VITE_AWS_DYNAMODB_ANALYTICS_TABLE="diatonic-ai-analytics-development"

# ==============================================
# FEATURE FLAGS
# ==============================================

# Debug and Development Features
VITE_ENABLE_DEBUG_LOGS="true"
VITE_ENABLE_CONSOLE_LOGS="true"
VITE_ENABLE_PERFORMANCE_MONITORING="false"

# Analytics and Tracking
VITE_ENABLE_ANALYTICS="false"
VITE_ENABLE_ERROR_TRACKING="true"
VITE_ENABLE_USAGE_TRACKING="false"

# UI Features
VITE_ENABLE_DARK_MODE="true"
VITE_ENABLE_BETA_FEATURES="false"
VITE_ENABLE_MAINTENANCE_MODE="false"

# ==============================================
# THIRD-PARTY INTEGRATIONS
# ==============================================

# Stripe Configuration (for billing)
VITE_STRIPE_PUBLISHABLE_KEY="pk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# Google Analytics
VITE_GA_MEASUREMENT_ID="G-XXXXXXXXXX"

# Sentry Error Tracking
VITE_SENTRY_DSN="https://xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx@sentry.io/xxxxxxx"

# PostHog Analytics
VITE_POSTHOG_API_KEY="phc_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
VITE_POSTHOG_HOST="https://app.posthog.com"

# ==============================================
# API CONFIGURATION
# ==============================================

# API Timeouts and Limits
VITE_API_TIMEOUT="30000"
VITE_API_RETRY_COUNT="3"
VITE_API_BASE_URL="http://localhost:3000/api"

# Rate Limiting
VITE_RATE_LIMIT_REQUESTS="100"
VITE_RATE_LIMIT_WINDOW="900000"

# ==============================================
# SECURITY CONFIGURATION
# ==============================================

# CORS Settings
VITE_CORS_ALLOWED_ORIGINS="http://localhost:8080,http://localhost:3000"

# Content Security Policy
VITE_CSP_ENABLED="false"
VITE_CSP_REPORT_URI=""

# Authentication
VITE_JWT_EXPIRY="3600"
VITE_REFRESH_TOKEN_EXPIRY="86400"

# ==============================================
# DEVELOPMENT TOOLS
# ==============================================

# Hot Module Replacement
VITE_HMR="true"

# Source Maps
VITE_SOURCE_MAPS="true"

# Bundle Analysis
VITE_BUNDLE_ANALYZER="false"

# ==============================================
# DATABASE CONFIGURATION (for development)
# ==============================================

# Local DynamoDB
DYNAMODB_LOCAL_ENDPOINT="http://localhost:8000"
DYNAMODB_LOCAL_ACCESS_KEY_ID="local"
DYNAMODB_LOCAL_SECRET_ACCESS_KEY="local"

# ==============================================
# TESTING CONFIGURATION
# ==============================================

# Test Environment
TEST_ENV="development"
VITEST_UI="false"

# Mock Services
ENABLE_MOCK_API="false"
ENABLE_MOCK_AUTH="false"

# ==============================================
# DOCKER CONFIGURATION (if using Docker)
# ==============================================

# Docker Compose
COMPOSE_PROJECT_NAME="diatonic-ai-workbench"
COMPOSE_FILE="docker-compose.yml:docker-compose.dev.yml"

# Container Configuration
CONTAINER_PORT="8080"
HOST_PORT="8080"
