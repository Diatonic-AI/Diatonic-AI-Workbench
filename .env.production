# Production Environment Configuration
VITE_NODE_ENV=production

# AWS Configuration
VITE_AWS_REGION=us-east-2

# AWS Cognito Configuration (populated by Terraform/CI)
VITE_AWS_COGNITO_USER_POOL_ID=${COGNITO_USER_POOL_ID}
VITE_AWS_COGNITO_USER_POOL_CLIENT_ID=${COGNITO_CLIENT_ID}
VITE_AWS_COGNITO_IDENTITY_POOL_ID=${COGNITO_IDENTITY_POOL_ID}
VITE_AWS_COGNITO_USER_POOL_DOMAIN=${COGNITO_DOMAIN}

# API Gateway Configuration
VITE_API_GATEWAY_URL=${API_GATEWAY_URL}
VITE_API_GATEWAY_STAGE=prod

# S3 Configuration
VITE_S3_BUCKET_NAME=${S3_BUCKET_NAME}
VITE_S3_REGION=us-east-2
VITE_CLOUDFRONT_DOMAIN=${CLOUDFRONT_DOMAIN}

# DynamoDB Configuration
VITE_DYNAMODB_USER_DATA_TABLE=${USER_DATA_TABLE}
VITE_DYNAMODB_FILES_TABLE=${FILES_TABLE}
VITE_DYNAMODB_SESSIONS_TABLE=${SESSIONS_TABLE}

# Application Configuration
VITE_APP_NAME="AI Nexus Workbench"
VITE_APP_VERSION=${APP_VERSION}
VITE_APP_DOMAIN=${APP_DOMAIN}
VITE_APP_URL=https://${APP_DOMAIN}

# Feature Flags
VITE_ENABLE_FILE_UPLOAD=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_DEBUG_LOGGING=false
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Security Configuration
VITE_ENABLE_CSP=true
VITE_ENABLE_HSTS=true
VITE_ENABLE_SECURE_HEADERS=true

# Third-party Integrations
VITE_SENTRY_DSN=${SENTRY_DSN}
VITE_GOOGLE_ANALYTICS_ID=${GA_ID}
VITE_HOTJAR_ID=${HOTJAR_ID}
